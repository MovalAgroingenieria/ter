<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="wua_config_settings_view_form" model="ir.ui.view">
        <field name="name">Parameters</field>
        <field name="model">wua.configuration</field>
        <field name="inherit_id" ref="base_wua.wua_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[5]" position="after">
                 <group string="SIGPAC Settings">
                    <field name="sigpac_path" string="Path of the shapefiles"/>
                    <field name="sigpac_names" string="Names of the shapefiles"/>
                    <div colspan="2">
                        <label string="Click on the following link to import the SIGPAC enclosures from the official shapefiles into the database."/>
                        <button type="object" name="action_load_sigpac" string="Load SIGPAC enclosures" icon="fa-download" class="oe_inline oe_link"/>
                    </div>
                    <field name="sigpac_minimum_intersection_percentage"
                           string="Min. Intersection (%)"
                           style="width:100px"/>
                    <div colspan="2">
                        <label string="IMPORTANT: If the 'Min. Intersection' parameter is changed, it will be necessary to reload the SIGPAC enclosures."/>
                    </div>
                    <field name="sigpac_use_venv27"
                           string="venv27 (python)"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>